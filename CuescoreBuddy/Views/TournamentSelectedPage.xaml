<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CuescoreBuddy.Views.TournamentSelectedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:CuescoreBuddy.ViewModels"
    Title="">

    <ContentPage.BindingContext>
        <vm:TournamentSelectedViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Margin="10,0,10,0">
    <Border Padding="20,20,20,20" Margin="0,0,0,20" StrokeThickness="3" >
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10,10,10,10" />
        </Border.StrokeShape>
        <VerticalStackLayout>
            <Label
            Margin="0"
            FontSize="Medium"
            HorizontalOptions="FillAndExpand"
            Text="{Binding Message}" />
            <Button
            Command="{Binding MonitorCommand}"
            HorizontalOptions="FillAndExpand"
            Margin="0,10,0,0"
            Text="Setup monitoring" />
        </VerticalStackLayout>
    </Border>
    </VerticalStackLayout>
</ContentPage>