<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PoolScoreBuddy.Views.TournamentSelectedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:PoolScoreBuddy.ViewModels"
    xmlns:res="clr-namespace:PoolScoreBuddy.Resources"
    Title="{x:Static res:AppResources.TournamentSelectedTitle}"
>
    <ContentPage.BindingContext>
        <vm:TournamentSelectedViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Margin="10,0,10,0">
        <Border Margin="0,0,0,20">
            <VerticalStackLayout>
            <Label
            Margin="0"
            FontSize="Medium"
            HorizontalOptions="FillAndExpand"
            Text="{Binding Message}" />
            <Button
            Command="{Binding MonitorCommand}"
            HorizontalOptions="FillAndExpand"
            Margin="0,10,0,0"
            Text="{x:Static res:AppResources.MonitoringButton}" />
        </VerticalStackLayout>
    </Border>
    </VerticalStackLayout>
</ContentPage>